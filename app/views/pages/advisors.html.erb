<div class="container">
  <h1>Pages#advisors</h1>
  <p>Find me in app/views/pages/advisors.html.erb</p>

  <h2>Welcome</h2>
  <%= "#{@advisor.first_name} - #{@advisor.last_name}"%>
  <br>
  <br>
  <%= link_to "create an appointment type", new_advisor_appointment_type_path(advisor_id: current_advisor.id)%>

  <div class="container mt-4">
    <div class="row">
      <% @appointment_types.each do |appointment| %>
        <div class="col-sm">
          <div class="card-product">
            <img src="https://source.unsplash.com/random/?bike" alt="Bike">
            <div class="appoint-info">
              <h2><%= appointment.name %></h2>
              <h6><%= appointment.duration %> minutes</h6>
              <p><%= appointment.description %></p>
            </div>
          </div>

        </div>
      <% end  %>
      </div>
  </div>
<br>
  <h2 class="mt-3">Manage your Availabilities</h2>
<br>
  <h2 class="mt-3">Manage your Appointments</h2>

  <table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Status</th>
      <th scope="col">Prénom</th>
      <th scope="col">Nom</th>
      <th scope="col">Début</th>
      <th scope="col">Fin</th>
      <th scope="col">Type de RDV</th>
    </tr>
  </thead>
  <tbody>
  <% @appointment_types.each do |appointment_type| %>
    <tr>
      <td>pending</td>
      <td>Mark</td>
      <td>Otto</td>
      <td>12-01-2024 / 12:00</td>
      <td>12-01-2024 / 13:00</td>
      <td><%= appointment_type.name %></td>
    </tr>
  <% end  %>
  </tbody>
</table>

</div>
